# Docker-compose specification for Gitlab

postgresql:
  image: sameersbn/postgresql:{{ gitlab_postgres_version }}
  environment:
    - DB_USER=gitlab
    - DB_PASS={{ db_password }}
    - DB_NAME=gitlabhq_production
  volumes:
    - /srv/docker/gitlab/postgresql:/var/lib/postgresql

gitlab:
  image: sameersbn/gitlab:{{ gitlab_version }}
  links:
    - redis:redisio
    - postgresql:postgresql
  ports:
    - "{{ gitlab_port }}:80"
    - "{{ gitlab_ssh_port }}:22"
  environment:
    - TZ={{ timezone }}
    - SMTP_ENABLED=false
    - SMTP_DOMAIN=www.example.com
    - SMTP_HOST=smtp.gmail.com
    - SMTP_PORT=587
    - SMTP_USER=mailer@example.com
    - SMTP_PASS=password
    - SMTP_STARTTLS=true
    - SMTP_AUTHENTICATION=login
    - GITLAB_TIMEZONE={{ gitlab_timezone }}
    - GITLAB_HOST={{ gitlab_host }}
    - GITLAB_PORT={{ gitlab_port }}
    - GITLAB_SSH_PORT={{ gitlab_ssh_port }}
    - GITLAB_EMAIL={{ gitlab_email }}
    - GITLAB_EMAIL_REPLY_TO={{ gitlab_email_reply_to }}
    - GITLAB_BACKUPS=daily
    - GITLAB_BACKUP_TIME=01:00
  volumes:
    - /srv/docker/gitlab/gitlab:/home/git/data

redis:
  image: sameersbn/redis:latest
  volumes:
    - /srv/docker/gitlab/redis:/var/lib/redis
